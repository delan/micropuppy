root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml}]
indent_size = 2
# an indent size of 2 makes sure that list items align:
# ```
# - name: 
#   runs-on: ubuntu-latest
# ```

[Makefile]
indent_style = tab
