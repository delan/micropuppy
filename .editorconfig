root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml}]
# an indent size of 2 makes sure that list items align:
# ```
# - name: download docs artifact
#   uses: actions/download-artifact@v3
# ```
indent_size = 2

[Makefile]
indent_style = tab
